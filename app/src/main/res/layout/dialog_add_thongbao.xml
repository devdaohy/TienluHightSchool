<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#215e81">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialogLop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Thêm thông báo mới"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a2cdcf"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
    <EditText
        android:id="@+id/tieude"
        android:textColor="#000000"
        android:background="#a2cdcf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="start"
        android:hint=" Nhập tiêu đề thông báo..."/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#a2cdcf"
        android:layout_margin="10dp">
    <EditText
        android:id="@+id/noidung"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="200dp"
        android:gravity="start"
        android:hint="Nhập nội dung thông báo..."/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/click_click"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textColor="#FFF"
                android:text="Thêm Thông Báo"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>